<!DOCTYPE html>
<html>
<head>
  <title>Scrum</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <link rel="stylesheet" type="text/css" href="/assets/partials.css">
  <%= javascript_include_tag "application" %>
  <script src="/assets/modal.js" type="text/javascript"></script>
  <script type="text/javascript" src="/assets/jquery.jOrgChart.js"></script>
  <link rel="stylesheet" href="css/jquery.jOrgChart.css"/>
  <%= csrf_meta_tags %>
  <script type="text/javascript">
    var ssInterval;
    $(document).ready(function(){
        ssInterval = window.setTimeout(showPonies, 20000);
        $(document).mousemove(function() {
          window.clearTimeout(ssInterval);
          ssInterval = window.setTimeout(showPonies, 20000);
        });
        //$('#org').jOrgChart();
      });
function showPonies() {
   window.clearTimeout(ssInterval);
}
  </script>
</head>
<body>
<header>
<%= render 'layouts/header' %>
</header>
<% if signed_in? %>
  <%= render 'layouts/sidenav' %>
<% end %>
<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>
<div class="content">
  <%= yield %>
</div>
</body>
</html>
