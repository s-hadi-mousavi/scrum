<%= form_for(@project) do |p| %>
  <%= p.text_field :name, :placeholder => "Project Name" %>
  <br>
  <%= p.text_area :description, :placeholder => "Summarize your project", class: "description" %>
  <br>
  <%= p.collection_select(:group_id, @hgroups, :id, :name) %>
  <%= p.submit "Create Project", class: "btn btn-primary" %>
<% end %>
